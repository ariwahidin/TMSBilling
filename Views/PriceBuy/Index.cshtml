    @model IEnumerable<TMSBilling.Models.PriceBuy>
    @{
        Layout = "~/Views/Shared/_MainLayout.cshtml";
        ViewData["Title"] = "Price Buy";
        var isAdmin = Context.Session.GetString("is_admin") == "true";
    }

    <div class="align-items-center mb-3">
        @* <h4>Price Buy</h4> *@
        @if (isAdmin)
        {
            <button class="btn btn-primary btn-sm" onclick="loadForm(0)">Add Price Buy</button>
            <a href="/PriceBuy/Upload" class="btn btn-success btn-sm" >Import</a>
            <button class="btn btn-info btn-sm" id="btnDownloadPriceBuy">
                Download Price Buy
            </button>
        }
    </div>

    <table class="table table-bordered table-sm table-striped" id="priceBuyTable">
        <thead>
            <tr>
                <th>Vendor ID</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Service Type</th>
                <th>Moda</th>
                <th>Truck Size</th>
                <th>Charge UoM</th>
                <th style="width:10px;">Status</th>
                <th style="width:80px">Action</th>
            </tr>
            <!-- Tambahkan baris kedua untuk filter -->
            <tr>
                <th><input type="text" class="form-control form-control-sm" placeholder="Search Vendor" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Search Origin" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Search Destination" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Service Type" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Moda" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Truck Size" /></th>
                <th><input type="text" class="form-control form-control-sm" placeholder="Charge UoM" /></th>
                @* <th><input type="text" class="form-control form-control-sm" placeholder="Status" /></th> *@
                <th>
                    <select class="form-select form-select-sm">
                        <option value="">All</option>
                        <option value="Aktif">Aktif</option>
                        <option value="Nonaktif">Nonaktif</option>
                    </select>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.sup_code</td>
                    <td>@item.origin</td>
                    <td>@item.dest</td>
                    <td>@item.serv_type</td>
                    <td>@item.serv_moda</td>
                    <td>@item.truck_size</td>
                    <td>@item.charge_uom</td>
                    <td>@(item.active_flag == 1 ? "Aktif" : "Nonaktif")</td>
                    <td>
        @if (isAdmin)
        {
                        <button class="btn btn-warning btn-sm" onclick="loadForm(@item.id_seq)">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="btn btn-sm btn-danger btnDelete" data-id="@item.id_seq">
                            <i class="bi bi-trash"></i>
                        </button>
        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="formModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detail Buying Price</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="formBody">
                    <!-- form will load here -->
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Download -->
    <div class="modal fade" id="downloadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Download Price Buy</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <label class="form-label">Vendor Truck</label>
                    <select id="vendorSelect" class="form-select select2" multiple>
                        @foreach (var item in Model.Select(x => x.sup_code).Distinct())
                        {
                            <option value="@item">@item</option>
                        }
                    </select>

                <div class="form-text">Clear Selection = All Vendor</div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary" id="btnConfirmDownload">Download</button>
                </div>
            </div>
        </div>
    </div>



    <style>

        /* === Compact table and filters === */
        #priceBuyTable {
            font-size: 13px;
        }

            #priceBuyTable th,
            #priceBuyTable td {
                padding: 4px 8px !important; /* lebih rapat */
                vertical-align: middle;
            }

            #priceBuyTable thead input {
                width: 100%;
                padding: 2px 4px;
                font-size: 12px;
                line-height: 1.2;
                height: 24px;
                border: 1px solid #ccc;
                border-radius: 3px;
            }

            #priceBuyTable thead select {
                width: 100%;
                padding: 2px 4px;
                font-size: 12px;
                height: 24px;
                border: 1px solid #ccc;
                border-radius: 3px;
            }

        .dataTables_wrapper .dataTables_filter input {
            height: 28px;
            font-size: 13px;
        }

        .dataTables_wrapper .dataTables_length select {
            height: 28px;
            font-size: 13px;
        }


    </style>

    @section Scripts {
        <script>
            function loadForm(id) {
                $.get('/PriceBuy/Form', { id }, function (html) {
                    $('#formBody').html(html);
                    const modal = new bootstrap.Modal(document.getElementById('formModal'));
                    modal.show();
                    $('.select2').select2({
                        dropdownParent: $('#formModal'),
                        placeholder: "Select an Option",
                        allowClear: true,
                        width: '100%' // ini penting biar full lebar
                    });
                })
                .fail(function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed to load form',
                        text: 'Please try again later.'
                    });
                });
            }

            $(document).ready(() => {
                // $('#priceBuyTable').DataTable();
                const table = $('#priceBuyTable').DataTable({
                    responsive: true,
                    pageLength: 25,
                    lengthMenu: [10, 25, 50, 100],
                    orderCellsTop: true,
                    fixedHeader: true
                });

                // Apply filter per kolom
                $('#priceBuyTable thead tr:eq(1) th').each(function (i) {
                    $('input, select', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                });

                // tombol untuk buka modal download
                $('#btnDownloadPriceBuy').on('click', function () {
                    const modal = new bootstrap.Modal(document.getElementById('downloadModal'));
                    modal.show();

                    $('#vendorSelect').select2({
                        dropdownParent: $('#downloadModal'),
                        width: '100%',
                        placeholder: "Select Vendor",
                        allowClear: true
                    });
                });

                // ketika konfirmasi download
                $('#btnConfirmDownload').on('click', function () {
                    var vendors = $('#vendorSelect').val(); // array atau null

                    // jika tidak pilih → ALL
                    if (!vendors || vendors.length === 0) {
                        window.location.href = "/PriceBuy/Download";
                    } else {
                        // encode array ke query string
                        const query = vendors.map(v => "vendor=" + encodeURIComponent(v)).join("&");
                        window.location.href = "/PriceBuy/Download?" + query;
                    }
                });
            });

            $(document).on("click", ".btnDelete",function () {
                const id = $(this).data("id");

                Swal.fire({
                    title: "Delete this record?",
                    text: "This action cannot be undone.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    cancelButtonText: "Cancel",
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6"
                }).then((result) => {
                    if (result.isConfirmed) {
                    $.post("/PriceBuy/Delete", { id })
                        .done(() => {
                            Swal.fire({
                                title: "Deleted",
                                text: "Record deleted successfully.",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        })
                        .fail(() => {
                            Swal.fire({
                                title: "Error",
                                text: "Failed to delete the record.",
                                icon: "error"
                            });
                        });
                    }
                });
            });
        </script>
    }
