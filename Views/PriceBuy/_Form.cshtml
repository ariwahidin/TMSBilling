@model TMSBilling.Models.PriceBuy

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="id_seq" />

    <div class="row">
        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Supplier</label>
                <div class="col-sm-8">
                    <input asp-for="sup_code" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Origin</label>
                <div class="col-sm-8">
                    <input asp-for="origin" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Destination</label>
                <div class="col-sm-8">
                    <input asp-for="dest" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Service Type</label>
                <div class="col-sm-8">
                    <input asp-for="serv_type" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Service Moda</label>
                <div class="col-sm-8">
                    <input asp-for="serv_moda" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Truck Size</label>
                <div class="col-sm-8">
                    <input asp-for="truck_size" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Charge UOM</label>
                <div class="col-sm-8">
                    <input asp-for="charge_uom" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Buy 1</label>
                <div class="col-sm-8">
                    <input asp-for="buy1" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Currency</label>
                <div class="col-sm-8">
                    <input asp-for="curr" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Rate</label>
                <div class="col-sm-8">
                    <input asp-for="rate_value" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Valid Date</label>
                <div class="col-sm-8">
                    <input asp-for="valid_date" type="date" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Status</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="active_flag" value="1"
                               @(Model.active_flag == 1 ? "checked" : "") />
                        <label class="form-check-label ms-2">Active</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-10 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>
