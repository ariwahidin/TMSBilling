@model TMSBilling.Models.CustomerGroup
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    var customerList = ViewBag.CustomerList as List<SelectListItem>;
}

<form id="formCustomerGroup">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">WMS Code</label>
        <div class="col-sm-8">
            <input asp-for="SUB_CODE" class="form-control" required />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Customer ID</label>
        <div class="col-sm-8">
            <select asp-for="CUST_CODE" asp-items="customerList" class="form-select select2" required>
                <option value="">Select an Option</option>
            </select>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>
