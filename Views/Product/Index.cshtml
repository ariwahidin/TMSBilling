@model IEnumerable<TMSBilling.Models.Product>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Product";
    var metadata = ViewBag.Metadata as TMSBilling.Models.Metadata;
}

<button class="btn btn-primary btn-sm mb-3" id="btnAdd">Add Product</button>
<form asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" value="@ViewBag.Search" placeholder="Search product..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>UOM</th>
            <th>Weight</th>
            <th>Volume</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.uom</td>
                <td>@item.weight</td>
                <td>@item.volume</td>
                <td>@item.price</td>
            </tr>
        }
    </tbody>
</table>

@if (metadata != null)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= metadata.total_page; i++)
            {
                <li class="page-item @(i == metadata.page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}



<div class="modal fade" id="productModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Form Product</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productTable').DataTable();
            let modal = new bootstrap.Modal(document.getElementById("productModal"));

            $("#btnAdd").click(function () {
                $.get("/Product/Form", function (html) {
                    $("#modalContent").html(html);
                    modal.show();
                });
            });

            $(".btnEdit").click(function () {
                const id = $(this).data("id");
                $.get("/Product/Form?id=" + id, function (html) {
                    $("#modalContent").html(html);
                    modal.show();
                });
            });

            $(".btnDelete").click(function () {
                if (!confirm("Yakin hapus data ini?")) return;
                const id = $(this).data("id");

                $.post("/Product/Delete", { id }, function () {
                    location.reload();
                }).fail(function () {
                    alert("Gagal menghapus data.");
                });
            });

            $(document).on("submit", "#productForm", function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/Product/Form",
                    data: $(this).serialize(),
                    success: function () {
                        modal.hide();
                        location.reload();
                    },
                    error: function () {
                        alert("Gagal menyimpan data.");
                    }
                });
            });
        });
    </script>
}
