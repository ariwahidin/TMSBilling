@model TMSBilling.Models.Vendor
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = Model.ID == 0 ? "Add Vendor" : "Edit Vendor";
}

@* <h4>@ViewData["Title"]</h4> *@

<form asp-action="@(Model.ID == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="row">
        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vendor Code</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_CODE" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vendor Name</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_NAME" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Address 1</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_ADDR1" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Address 2</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_ADDR2" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">City</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_CITY" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-md-5">

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Phone</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_TEL" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Fax</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_FAX" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">PIC</label>
                <div class="col-sm-8">
                    <input asp-for="SUP_PIC" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Tax Reg. No.</label>
                <div class="col-sm-8">
                    <input asp-for="TAX_REG_NO" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vendor Status</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="statusSwitch"
                               name="ACTIVE_FLAG" value="1"
                               @(Model.ACTIVE_FLAG == 1 ? "checked" : "")>
                        <label class="form-check-label ms-2" for="statusSwitch">Active</label>
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label text-end"></label>
                <div class="col-sm-8 ms-2">
                    <div class="form-check form-switch">
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                        <a asp-action="Create" class="btn btn-info">Reset</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</form>
