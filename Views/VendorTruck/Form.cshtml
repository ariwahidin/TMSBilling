@model TMSBilling.Models.VendorTruck
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = Model.ID == 0 ? "Add Truck" : "Edit Truck";
}

<form asp-action="@(Model.ID == 0 ? "Create" : "Edit")" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="row">
        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vendor ID</label>
                <div class="col-sm-8">
                    <select asp-for="sup_code" asp-items="ViewBag.ListVendor" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Truck ID</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_no" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vehicle Merk</label>
                <div class="col-sm-8">
                    <select asp-for="vehicle_merk" asp-items="ViewBag.ListMerk" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Vehicle Type</label>
                <div class="col-sm-8">
                    <select asp-for="vehicle_type" asp-items="ViewBag.ListType" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Door Type</label>
                <div class="col-sm-8">
                    <select asp-for="vehicle_doortype" asp-items="ViewBag.ListDoorType" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Capacity</label>
                <div class="col-sm-8">
                    <select asp-for="vehicle_size" asp-items="ViewBag.ListCapacity" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Driver</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_driver" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">STNK</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_STNK" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">STNK Exp.</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_STNK_exp" type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">KIR</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_KIR" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">KIR Exp.</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_KIR_exp" type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Emisi</label>
                <div class="col-sm-8">
                    <input asp-for="vehicle_emisi" type="date" class="form-control" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-end">KTP</label>
                <div class="col-sm-10">
                    <input asp-for="vehicle_KTP" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-end">SIM Exp.</label>
                <div class="col-sm-10">
                    <input asp-for="vehicle_SIM" type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-end">Remark</label>
                <div class="col-sm-10">
                    <input asp-for="vehicle_remark" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-end">Vehicle Status</label>
                <div class="col-sm-10 d-flex align-items-center">
                    @* <input type="hidden" name="vehicle_active" value="0" /> *@
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="activeSwitch"
                               name="vehicle_active" value="1"
                               @(Model.vehicle_active == 1 ? "checked" : "") />
                        <label class="form-check-label ms-2" for="activeSwitch">Active</label>
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-2 col-form-label text-end"></label>
                <div class="col-sm-10">
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <a asp-action="Create" class="btn btn-info">Reset</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                // dropdownParent: $('#modalForm'),
                placeholder: "Select an Option",
                allowClear: true,
                width: '100%' // ini penting biar full lebar
            });
        })
    </script>
}
