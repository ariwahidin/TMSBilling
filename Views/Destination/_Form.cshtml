@model TMSBilling.Models.Destination

<form id="destinationForm">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Destination Name</label>
        <div class="col-sm-8">
            <input asp-for="destination_code" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Location Code</label>
        <div class="col-sm-8">
            <input asp-for="dest_loccode" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Area</label>
        <div class="col-sm-8">
            <select id="area"
                    asp-for="area"
                    name="area"
                    asp-items="ViewBag.ListArea"
                    class="form-select select2"
                    required>
                <option value="">Select an Option</option>
            </select>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
    </div>
</form>
