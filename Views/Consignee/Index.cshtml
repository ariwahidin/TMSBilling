@model IEnumerable<TMSBilling.Controllers.ConsigneeViewModel>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Consignee";
    var isAdmin = Context.Session.GetString("is_admin") == "true";
}

