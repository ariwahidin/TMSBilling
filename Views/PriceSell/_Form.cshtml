@model TMSBilling.Models.PriceSell

<form method="post" asp-action="Save">
    <input type="hidden" asp-for="id_seq" />

    <div class="row">
        <!-- LEFT COLUMN -->
        <div class="col-md-6">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Customer</label>
                <div class="col-sm-8">
                    <select asp-for="cust_code" asp-items="ViewBag.ListCustomer" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Origin</label>
                <div class="col-sm-8">
                    <select asp-for="origin" asp-items="ViewBag.ListOrigin" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Destination</label>
                <div class="col-sm-8">
                    <select asp-for="dest" asp-items="ViewBag.ListDestination" class="form-select select2" required>
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Service Type</label>
                <div class="col-sm-8">
                    <select asp-for="serv_type" asp-items="ViewBag.ListServiceType" class="form-select select2">
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Service Moda</label>
                <div class="col-sm-8">
                    <select asp-for="serv_moda" asp-items="ViewBag.ListServiceModa" class="form-select select2">
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Truck Size</label>
                <div class="col-sm-8">
                    <select asp-for="truck_size" asp-items="ViewBag.ListTruckSize" class="form-select select2">
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Charge UOM</label>
                <div class="col-sm-8">
                    <select asp-for="charge_uom" asp-items="ViewBag.ListChargeUom" class="form-select select2">
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Sell 1</label>
                <div class="col-sm-8">
                    <input asp-for="sell1" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Sell 2</label>
                <div class="col-sm-8">
                    <input asp-for="sell2" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Sell 3</label>
                <div class="col-sm-8">
                    <input asp-for="sell3" class="form-control" />
                </div>
            </div>
            <!-- Tambahan Sell Rate -->
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Return Empty</label>
                <div class="col-sm-8">
                    <input asp-for="sell_ret_empty" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Return Cargo</label>
                <div class="col-sm-8">
                    <input asp-for="sell_ret_cargo" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Over Night</label>
                <div class="col-sm-8">
                    <input asp-for="sell_ovnight" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Cancel</label>
                <div class="col-sm-8">
                    <input asp-for="sell_cancel" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Trip 2</label>
                <div class="col-sm-8">
                    <input asp-for="selltrip2" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Trip 3</label>
                <div class="col-sm-8">
                    <input asp-for="selltrip3" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Diff Area</label>
                <div class="col-sm-8">
                    <input asp-for="sell_diff_area" class="form-control" />
                </div>
            </div>

            
        </div>

        <!-- RIGHT COLUMN -->
        <div class="col-md-5">
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Flag Range</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <input type="hidden" name="flag_range" value="0" />
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="flag_range" value="1"
                               @(Model.flag_range == 1 ? "checked" : "") />
                        <label class="form-check-label ms-2">Yes</label>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Min Range</label>
                <div class="col-sm-7">
                    <input asp-for="min_range" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Max Range</label>
                <div class="col-sm-7">
                    <input asp-for="max_range" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Flag Min</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <input type="hidden" name="flag_min" value="0" />
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="flag_min" value="1"
                               @(Model.flag_min == 1 ? "checked" : "") />
                        <label class="form-check-label ms-2">Yes</label>
                    </div>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Charge Min</label>
                <div class="col-sm-7">
                    <input asp-for="charge_min" class="form-control" />
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Currency</label>
                <div class="col-sm-7">
                    <select asp-for="curr" asp-items="ViewBag.ListCurrency" class="form-select select2">
                        <option value="">Select an Option</option>
                    </select>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Rate</label>
                <div class="col-sm-7">
                    <input asp-for="rate_value" class="form-control" />
                </div>
            </div>

            <!-- Flags -->
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Active</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <input type="hidden" name="active_flag" value="0" />
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" name="active_flag" value="1"
                               @(Model.active_flag == 1 ? "checked" : "") />
                        <label class="form-check-label ms-2">Yes</label>
                    </div>
                </div>
            </div>
            <!-- Valid Date -->
            <div class="mb-3 row">
                <label class="col-sm-4 col-form-label text-end">Valid Date</label>
                <div class="col-sm-7">
                    <input asp-for="valid_date" type="date" class="form-control" />
                </div>
            </div>
            

           

            
        </div>
    </div>

    <!-- BUTTON -->
    <div class="row mt-3">
        <div class="col-md-12 text-end">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>
