@model TMSBilling.Models.PriceSell

<div class="modal fade" id="priceSellModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-action="Save">
                <div class="modal-header">
                    <h5 class="modal-title">@(Model.id_seq == 0 ? "Add" : "Edit") Price Sell</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="id_seq" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-2">
                                <label>Customer</label>
                                <input asp-for="cust_code" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Origin</label>
                                <input asp-for="origin" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Dest</label>
                                <input asp-for="dest" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Service Type</label>
                                <input asp-for="serv_type" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Charge UOM</label>
                                <input asp-for="charge_uom" class="form-control" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-2">
                                <label>Truck Size</label>
                                <input asp-for="truck_size" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Sell 1</label>
                                <input asp-for="sell1" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label>Valid Date</label>
                                <input asp-for="valid_date" type="date" class="form-control" />
                            </div>
                            <div class="form-check form-switch mt-3">
                                <input class="form-check-input" type="checkbox" name="active_flag" value="1"
                                       @(Model.active_flag == 1 ? "checked" : "")>
                                <label class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
