        function updateLocationFromForm() {
            const coordinatesInput = document.getElementById('coordinates');
            const radiusInput = document.getElementById('radius');
            const addressInput = document.getElementById('address');
            const provinceInput = document.getElementById('province');
            const cityInput = document.getElementById('city');
            const postalCodeInput = document.getElementById('postalCode');

            // Get coordinates from input field
            if (coordinatesInput && coordinatesInput.value) {
                const coordinatesValue = coordinatesInput.value.trim();

                // Parse coordinates from format "(-6.2088, 106.8456)" or similar
                const coordMatch = coordinatesValue.match(/\(?\s*(-?\d+\.?\d*)\s*,\s*(-?\d+\.?\d*)\s*\)?/);

                if (coordMatch) {
                    const lat = parseFloat(coordMatch[1]);
                    const lon = parseFloat(coordMatch[2]);

                    // Center map on coordinates
                    map.setView([lat, lon], 16);

                    // Remove existing marker if any
                    if (window.currentMarker) {
                        map.removeLayer(window.currentMarker);
                    }

                    // Create address object from form inputs
                    const addressData = {
                        display_name: addressInput ? addressInput.value : `Location at ${lat}, ${lon}`,
                        lat: lat,
                        lon: lon,
                        province: provinceInput ? provinceInput.value : '',
                        city: cityInput ? cityInput.value : '',
                        postcode: postalCodeInput ? postalCodeInput.value : ''
                    };

                    // Add marker
                    const shortName = getShortName(addressData.display_name);
                    window.currentMarker = L.marker([lat, lon])
                        .addTo(map)
                        .bindPopup(`<strong>${shortName}</strong><br>${addressData.display_name}<br>Lat: ${lat}<br>Lng: ${lon}`)
                        .openPopup();

                    // Create default circular geofence
                    const radius = parseInt(radiusInput ? radiusInput.value : 100) || 100;
                    createCircularGeofence(lat, lon, radius);

                    console.log('Location updated from form:', addressData);
                    return true;
                } else {
                    console.warn('Invalid coordinates format:', coordinatesValue);
                    return false;
                }
            } else {
                console.warn('No coordinates found in form');
                return false;
            }
        }

