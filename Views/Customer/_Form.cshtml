@model TMSBilling.Models.Customer
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var mainCustList = ViewBag.MainCustomerList as List<SelectListItem>;
}

<form id="customerForm">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Customer ID</label>
        <div class="col-sm-8">
            <input asp-for="CUST_CODE" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Customer Name</label>
        <div class="col-sm-8">
            <input asp-for="CUST_NAME" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Address</label>
        <div class="col-sm-8">
            <input asp-for="CUST_ADDR1" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">City</label>
        <div class="col-sm-8">
            <input asp-for="CUST_CITY" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">PIC Name</label>
        <div class="col-sm-8">
            <input asp-for="CUST_PIC" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Main Customer</label>
        <div class="col-sm-8">
            <select asp-for="MAIN_CUST" asp-items="mainCustList" class="form-control select2">
                <option value="">-- Pilih --</option>
            </select>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Cutoff Date</label>
        <div class="col-sm-8">
            <input asp-for="CUST_CUTOFF" class="form-control" />
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label text-end">Customer Status</label>
        <div class="col-sm-8">
            <select asp-for="ACTIVE_FLAG" class="form-select">
                <option value="1">Active</option>
                <option value="0">Not Active</option>
            </select>
        </div>
    </div>

    <div class="text-end">
        <button type="submit" class="btn btn-sm btn-primary">Save</button>
    </div>
</form>
