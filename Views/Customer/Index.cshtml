@model IEnumerable<TMSBilling.Models.Customer>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Customer";
    var isAdmin = Context.Session.GetString("is_admin") == "true";
}

<button class="btn btn-primary btn-sm mb-3" id="btnAdd">Add Customer</button>
<button class="btn btn-primary btn-sm mb-3" onclick="window.location.href='/CustomerGroup/Index'">Customer Group</button>
<button class="btn btn-primary btn-sm mb-3" onclick="window.location.href='/CustomerMain/Index'">Main Customer</button>

<table class="table table-bordered table-striped" id="customerTable">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Status</th>
            <th>With API</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CUST_CODE</td>
                <td>@c.CUST_NAME</td>
                <td>@(c.ACTIVE_FLAG == 1 ? "Active" : "Not Active")</td>
                <td>@(c.API_FLAG == 1 ? "Yes" : "No")</td>
                <td>
                    <button class="btn btn-sm btn-warning btnEdit" data-id="@c.ID">
                        <i class="bi bi-pencil-square"></i>
                    </button>

                   

    @if (isAdmin)
    {
                    <button class="btn btn-sm btn-danger btnDelete" data-id="@c.ID">
                        <i class="bi bi-trash"></i>
                    </button>
    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="customerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Form Customer</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalContent"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#customerTable').DataTable();
            let modal = new bootstrap.Modal(document.getElementById("customerModal"));

            $("#btnAdd").click(function () {
                $.get("/Customer/Form", function (html) {
                    $("#modalContent").html(html);
                    modal.show();

                    // Inisialisasi select2 setelah HTML ditambahkan
                    $('.select2').select2({
                        dropdownParent: $('#customerModal'),
                        placeholder: "-- Pilih Main Customer --",
                        allowClear: true,
                        width: '100%'
                    });

                });
            });

            $(document).on("click", ".btnEdit", function () {
                const id = $(this).data("id");
                $.get("/Customer/Form?id=" + id, function (html) {
                    $("#modalContent").html(html);
                    modal.show();

                    // Inisialisasi select2 setelah HTML ditambahkan
                    $('.select2').select2({
                        dropdownParent: $('#customerModal'),
                        placeholder: "Select an Option",
                        allowClear: true,
                        width: '100%' // ini penting biar full lebar
                    });
                });
            });

            $(".btnDelete").click(function () {
                const id = $(this).data("id");

                Swal.fire({
                    title: "Delete this record?",
                    text: "This action cannot be undone.",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonText: "Delete",
                    cancelButtonText: "Cancel",
                    confirmButtonColor: "#d33",
                    cancelButtonColor: "#3085d6"
                }).then((result) => {
                    if (result.isConfirmed) {
                    $.post("/Customer/Delete", { id })
                        .done(() => {
                            Swal.fire({
                                title: "Deleted",
                                text: "Record deleted successfully.",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        })
                        .fail(() => {
                            Swal.fire({
                                title: "Error",
                                text: "Failed to delete the record.",
                                icon: "error"
                            });
                        });
                    }
                });
            });


            $(document).on("submit", "#customerForm", function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "/Customer/Form",
                    data: $(this).serialize(),
                    success: function () {
                        modal.hide();
                        location.reload();
                    },
                    error: function () {
                        // alert("Gagal menyimpan data.");
                    }
                });
            });
        });
    </script>
}
